<h1>我的收货地址</h1>
<div class="row">
  <div class="container">
    <div id="address_list">

    </div>
  </div>
</div>

<!--和地址页面逻辑完全一样，异步操作，利用js监视，返回地址列表-->
<%= content_for :javascripts do %>
  <script>
      $.get('/addresses', function(data) {
          $('#address_list').html(data);
      })
  </script>
<% end %>